<UserControl x:Class="ScreenCapture.DraggableText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <Grid x:Name="Root">
        <!-- TextBox -->
        <TextBox x:Name="TextBox"
                 Text=""
                 MinWidth="50"
                 MinHeight="30"
                 Foreground="Red"
                 FontSize="28"
                 FontWeight="Bold"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 IsReadOnly="False"
                 CaretBrush="Red"
                 IsHitTestVisible="True"
                 Panel.ZIndex="0">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="2"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Grid>
                                    <Border x:Name="border" 
                                            Background="{TemplateBinding Background}"
                                            BorderThickness="0">
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                    Focusable="False"
                                                    HorizontalScrollBarVisibility="Hidden"
                                                    VerticalScrollBarVisibility="Hidden"
                                                    Background="{TemplateBinding Background}"/>
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <!-- ドラッグ用Thumb -->
        <Thumb x:Name="DragThumb"
               Cursor="SizeAll"
               Background="Transparent"
               IsHitTestVisible="False"
               Focusable="True"
               Panel.ZIndex="0">
            <Thumb.Template>
                <ControlTemplate TargetType="Thumb">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Thumb.Template>
        </Thumb>

        <!-- バウンディングボックス -->
        <Border x:Name="BoundingBox"
                BorderBrush="#FF00BFFF"
                BorderThickness="2"
                Visibility="Collapsed"
                IsHitTestVisible="True"
                Panel.ZIndex="1">
            <Grid>
                <!-- 削除ボタン -->
                <Button x:Name="DeleteButton"
                        Width="20" Height="20"
                        Content="X"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Background="Red"
                        Foreground="White"
                        BorderBrush="#FF00BFFF"
                        BorderThickness="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,2,2,0"
                        Padding="0,-2,0,0"
                        Panel.ZIndex="10"/>
            </Grid>
        </Border>

        <!-- 文字サイズ変更ボタン（色ボタンの上に配置） -->
        <StackPanel x:Name="FontSizeButtons"
                   Orientation="Horizontal"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="0,-56,0,0"
                   Visibility="Collapsed"
                   Panel.ZIndex="10">
            <Button x:Name="FontSizeUpButton"
                    Width="20" Height="20"
                    Content="+"
                    FontSize="14"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Background="White"
                    Foreground="Black"
                    BorderBrush="#FF00BFFF"
                    BorderThickness="2"
                    Margin="0,0,2,0"
                    ToolTip="文字を大きく"
                    Padding="0,-2,0,0"/>
            <Button x:Name="FontSizeDownButton"
                    Width="20" Height="20"
                    Content="-"
                    FontSize="14"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Background="White"
                    Foreground="Black"
                    BorderBrush="#FF00BFFF"
                    BorderThickness="2"
                    ToolTip="文字を小さく"
                    Padding="0,-2,0,0"/>
        </StackPanel>

        <!-- 色変更ボタン（バウンディングボックスの外、上に配置） -->
        <StackPanel x:Name="ColorPalette"
                   Orientation="Horizontal"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="0,-28,0,0"
                   Visibility="Collapsed"
                   Panel.ZIndex="10">
            <xctk:ColorPicker x:Name="TextColorPicker"
                              Width="60"
                              Height="30"
                              Margin="0,0,2,0"
                              UsingAlphaChannel="True"
                              ToolTip="文字色"/>
            <xctk:ColorPicker x:Name="TextBackgroundPicker"
                              Width="60"
                              Height="30"
                              Margin="0,0,2,0"
                              UsingAlphaChannel="True"
                              ToolTip="背景色"/>
        </StackPanel>
    </Grid>
</UserControl>
