<UserControl x:Class="ScreenCapture.DraggableText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="Root">
        <!-- TextBox -->
        <TextBox x:Name="TextBox"
                 Text=""
                 MinWidth="50"
                 MinHeight="30"
                 Foreground="Yellow"
                 FontSize="28"
                 FontWeight="Bold"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 IsReadOnly="False"
                 CaretBrush="Yellow"
                 IsHitTestVisible="True"
                 Panel.ZIndex="0">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="2"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Grid>
                                    <Border x:Name="border" 
                                            Background="Transparent"
                                            BorderThickness="0">
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                    Focusable="False"
                                                    HorizontalScrollBarVisibility="Hidden"
                                                    VerticalScrollBarVisibility="Hidden"
                                                    Background="Transparent"/>
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <!-- ドラッグ用Thumb -->
        <Thumb x:Name="DragThumb"
               Cursor="SizeAll"
               Background="Transparent"
               IsHitTestVisible="False"
               Focusable="True"
               Panel.ZIndex="0">
            <Thumb.Template>
                <ControlTemplate TargetType="Thumb">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Thumb.Template>
        </Thumb>

        <!-- バウンディングボックス -->
        <Border x:Name="BoundingBox"
                BorderBrush="#FF00BFFF"
                BorderThickness="2"
                Visibility="Collapsed"
                IsHitTestVisible="True"
                Panel.ZIndex="1">
            <Grid>
                <!-- 削除ボタン -->
                <Button x:Name="DeleteButton"
                        Width="20" Height="20"
                        Content="X"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Background="Red"
                        Foreground="White"
                        BorderBrush="#FF00BFFF"
                        BorderThickness="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,2,2,0"
                        Padding="0,-2,0,0"
                        Panel.ZIndex="10"/>
            </Grid>
        </Border>

        <!-- 色変更ボタン（バウンディングボックスの外、上に配置） -->
        <StackPanel x:Name="ColorPalette"
                   Orientation="Horizontal"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="0,-28,0,0"
                   Visibility="Collapsed"
                   Panel.ZIndex="10">
            <Button x:Name="WhiteColorButton"
                    Width="20" Height="20"
                    Background="White"
                    BorderBrush="#FF00BFFF"
                    BorderThickness="2"
                    Cursor="Hand"
                    Margin="0,0,2,0"
                    ToolTip="白"/>
            <Button x:Name="BlackColorButton"
                    Width="20" Height="20"
                    Background="Black"
                    BorderBrush="#FF00BFFF"
                    BorderThickness="2"
                    Cursor="Hand"
                    Margin="0,0,2,0"
                    ToolTip="黒"/>
            <Button x:Name="RedColorButton"
                    Width="20" Height="20"
                    Background="Red"
                    BorderBrush="#FF00BFFF"
                    BorderThickness="2"
                    Cursor="Hand"
                    Margin="0,0,2,0"
                    ToolTip="赤"/>
            <Button x:Name="YellowColorButton"
                    Width="20" Height="20"
                    Background="Yellow"
                    BorderBrush="#FF00BFFF"
                    BorderThickness="2"
                    Cursor="Hand"
                    Margin="0,0,2,0"
                    ToolTip="黄"/>
            <Button x:Name="GreenColorButton"
                    Width="20" Height="20"
                    Background="Lime"
                    BorderBrush="#FF00BFFF"
                    BorderThickness="2"
                    Cursor="Hand"
                    Margin="0,0,2,0"
                    ToolTip="緑"/>
            <Button x:Name="BlueColorButton"
                    Width="20" Height="20"
                    Background="Blue"
                    BorderBrush="#FF00BFFF"
                    BorderThickness="2"
                    Cursor="Hand"
                    Margin="0,0,2,0"
                    ToolTip="青"/>
            <Button x:Name="CyanColorButton"
                    Width="20" Height="20"
                    Background="Cyan"
                    BorderBrush="#FF00BFFF"
                    BorderThickness="2"
                    Cursor="Hand"
                    Margin="0,0,2,0"
                    ToolTip="水色"/>
            <Button x:Name="MagentaColorButton"
                    Width="20" Height="20"
                    Background="Magenta"
                    BorderBrush="#FF00BFFF"
                    BorderThickness="2"
                    Cursor="Hand"
                    ToolTip="マゼンタ"/>
        </StackPanel>
    </Grid>
</UserControl>
