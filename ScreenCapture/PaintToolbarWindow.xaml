<Window x:Class="ScreenCapture.PaintToolbarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        ShowActivated="False"
        SizeToContent="WidthAndHeight"
        MinWidth="600">
    <Border Background="#CC000000" Padding="10">
        <StackPanel Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="30"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Style>
                <Style TargetType="ToggleButton">
                    <Setter Property="Width" Value="60"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Background" Value="Gray"/>
                    <Setter Property="FontSize" Value="12"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="Paint"
                      Foreground="White"
                      VerticalAlignment="Center"
                      Margin="10,0,10,0"
                      FontWeight="Bold"/>

            <!-- Color -->
            <TextBlock Text="Color:"
                      Foreground="White"
                      VerticalAlignment="Center"
                      Margin="5,0,5,0"/>
            <xctk:ColorPicker x:Name="PaintColorPicker"
                              Width="60"
                              Height="30"
                              Margin="5"
                              UsingAlphaChannel="True"/>

            <ToggleButton x:Name="ArrowModeToggle"
                          Content="Arrow"
                          ToolTip="Arrow mode (Ctrl)"/>

            <!-- Thickness -->
            <TextBlock Text="Size:"
                      Foreground="White"
                      VerticalAlignment="Center"
                      Margin="20,0,5,0"/>
            <Button x:Name="PaintThickness1" Content="1" Background="Gray" ToolTip="Thin"/>
            <Button x:Name="PaintThickness3" Content="3" Background="Gray" ToolTip="Normal"/>
            <Button x:Name="PaintThickness5" Content="5" Background="Gray" ToolTip="Bold"/>
            <Button x:Name="PaintThickness10" Content="10" Background="Gray" ToolTip="Extra"/>

            <!-- Undo / Redo -->
            <Button x:Name="UndoButton"
                    Content="Undo"
                    FontSize="14"
                    Background="DarkGray"
                    ToolTip="Undo (Ctrl+Z)"
                    Margin="20,5,5,5"
                    Width="50"/>
            <Button x:Name="RedoButton"
                    Content="Redo"
                    FontSize="14"
                    Background="DarkGray"
                    ToolTip="Redo (Ctrl+Y)"
                    Margin="0,5,5,5"
                    Width="50"/>

            <!-- Undo Limit -->
            <TextBlock Text="History:"
                      Foreground="White"
                      VerticalAlignment="Center"
                      Margin="20,0,5,0"/>
            <ComboBox x:Name="UndoLimitComboBox"
                     Width="60"
                     Height="25"
                     Margin="0,0,10,0"
                     VerticalAlignment="Center"
                     SelectedIndex="2">
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="20"/>
                <ComboBoxItem Content="50"/>
                <ComboBoxItem Content="100"/>
            </ComboBox>
        </StackPanel>
    </Border>
</Window>
