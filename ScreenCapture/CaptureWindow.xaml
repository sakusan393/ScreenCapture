<Window x:Class="ScreenCapture.CaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ScreenCapture"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        Loaded="Window_Loaded">
    <Grid>
        <!-- 背景：キャプチャ画像 -->
        <Border Background="Black">
            <Image x:Name="CaptureImage" Stretch="None" Focusable="True"/>
        </Border>

        <!-- 前景：テキスト等を載せる -->
        <Canvas x:Name="OverlayCanvas" Background="Transparent" Focusable="True"/>
        
        <!-- 枠線：キャプチャエリアを視認できるように半透明の赤い枠 -->
        <Border x:Name="BorderFrame"
                BorderBrush="#40FF0000"
                BorderThickness="5"
                IsHitTestVisible="False"
                Opacity="0.25"/>
        
        <!-- 閉じるボタン（マウスホバー時のみ表示） -->
        <Button x:Name="CloseButton"
                Width="30" Height="30"
                Content="×"
                FontSize="20"
                FontWeight="Bold"
                Cursor="Hand"
                Background="Red"
                Foreground="White"
                BorderBrush="White"
                BorderThickness="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,5,5,0"
                Visibility="Collapsed"
                Opacity="0.5"
                Panel.ZIndex="1000"
                ToolTip="ウィンドウを閉じる"/>
    </Grid>
</Window>
