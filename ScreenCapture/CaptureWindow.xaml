<Window x:Class="ScreenCapture.CaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ScreenCapture"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        Topmost="True"
        ShowInTaskbar="True"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">
    <Grid>
        <Grid x:Name="ContentLayer" Background="Black">
            <Grid x:Name="CaptureContent" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Border Background="Transparent">
                    <Image x:Name="CaptureImage" Stretch="None" Focusable="True" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Border>
            </Grid>

            <Canvas x:Name="OverlayCanvas" Background="Transparent" Focusable="True"/>
        </Grid>

        <Border x:Name="BorderFrame"
                BorderBrush="#FFFF0000"
                BorderThickness="5"
                IsHitTestVisible="False"
                Opacity="0.25"/>

        <Thumb x:Name="ResizeTopLeftThumb" Width="12" Height="12" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="SizeNWSE" Opacity="0"/>
        <Thumb x:Name="ResizeTopThumb" Height="6" HorizontalAlignment="Stretch" VerticalAlignment="Top" Cursor="SizeNS" Opacity="0"/>
        <Thumb x:Name="ResizeTopRightThumb" Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Top" Cursor="SizeNESW" Opacity="0"/>
        <Thumb x:Name="ResizeLeftThumb" Width="6" HorizontalAlignment="Left" VerticalAlignment="Stretch" Cursor="SizeWE" Opacity="0"/>
        <Thumb x:Name="ResizeRightThumb" Width="6" HorizontalAlignment="Right" VerticalAlignment="Stretch" Cursor="SizeWE" Opacity="0"/>
        <Thumb x:Name="ResizeBottomLeftThumb" Width="12" Height="12" HorizontalAlignment="Left" VerticalAlignment="Bottom" Cursor="SizeNESW" Opacity="0"/>
        <Thumb x:Name="ResizeBottomThumb" Height="6" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Cursor="SizeNS" Opacity="0"/>
        <Thumb x:Name="ResizeBottomRightThumb" Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Bottom" Cursor="SizeNWSE" Opacity="0"/>

        <xctk:ColorPicker x:Name="FrameColorPicker"
                          Width="60"
                          Height="30"
                          Margin="0,5,75,0"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Visibility="Collapsed"
                          Panel.ZIndex="1000"
                          UsingAlphaChannel="True"
                          ToolTip="枠線の色を変更"/>

        <xctk:ColorPicker x:Name="BackgroundColorPicker"
                          Width="60"
                          Height="30"
                          Margin="0,5,145,0"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Visibility="Collapsed"
                          Panel.ZIndex="1000"
                          UsingAlphaChannel="True"
                          ToolTip="背景色を変更"/>

        <Button x:Name="MinimizeButton"
                Width="30" Height="30"
                Content="—"
                FontSize="18"
                FontWeight="Bold"
                Cursor="Hand"
                Background="#666666"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,5,40,0"
                Visibility="Collapsed"
                Panel.ZIndex="1000"
                ToolTip="最小化"
                Padding="0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border Background="{TemplateBinding Background}">
                        </Border>
                        <TextBlock Text="{TemplateBinding Content}"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,-3,0,0"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="CloseButton"
                Width="30" Height="30"
                Content="×"
                FontSize="20"
                FontWeight="Bold"
                Cursor="Hand"
                Background="Red"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,5,5,0"
                Visibility="Collapsed"
                Panel.ZIndex="1000"
                ToolTip="ウィンドウを閉じる"
                Padding="0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border Background="{TemplateBinding Background}">
                        </Border>
                        <TextBlock Text="{TemplateBinding Content}"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,-3,0,0"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Border x:Name="LayerOrderPanel"
                Background="#CC000000"
                CornerRadius="6"
                Padding="6"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                Panel.ZIndex="3000">
            <Expander Header="Layers"
                      Foreground="White"
                      IsExpanded="False">
                <ListBox x:Name="LayerOrderListBox"
                         Width="80"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         AllowDrop="True">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Cursor" Value="SizeAll"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FF333333"
                                    CornerRadius="4"
                                    Padding="4"
                                    Margin="0,2,0,2">
                                <DockPanel LastChildFill="True">
                                    <TextBlock Text="≡"
                                               Foreground="#FFBFBFBF"
                                               FontSize="12"
                                               Margin="0,0,4,0"
                                               VerticalAlignment="Center"
                                               DockPanel.Dock="Left" />
                                    <TextBlock Text="{Binding DisplayName}" />
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Expander>
        </Border>
    </Grid>
</Window>
