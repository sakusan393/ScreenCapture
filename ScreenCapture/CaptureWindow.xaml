<Window x:Class="ScreenCapture.CaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ScreenCapture"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        Topmost="True"
        ShowInTaskbar="True"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">
    <Grid>
        <Grid x:Name="ContentLayer">
            <!-- 背景：キャプチャ画像 -->
            <Border Background="Transparent">
                <Image x:Name="CaptureImage" Stretch="None" Focusable="True"/>
            </Border>

            <!-- 前景：テキスト等を載せる -->
            <Canvas x:Name="OverlayCanvas" Background="Transparent" Focusable="True"/>
        </Grid>

        <!-- 枠線：キャプチャエリアを視認できるように半透明の赤い枠 -->
        <Border x:Name="BorderFrame"
                BorderBrush="#FFFF0000"
                BorderThickness="5"
                IsHitTestVisible="False"
                Opacity="0.25"/>

        <!-- 枠線色変更ボタン（マウスホバー時のみ表示） -->
        <xctk:ColorPicker x:Name="FrameColorPicker"
                          Width="60"
                          Height="30"
                          Margin="0,5,75,0"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Visibility="Collapsed"
                          Panel.ZIndex="1000"
                          UsingAlphaChannel="True"
                          ToolTip="枠線の色を変更"/>

        <!-- 最小化ボタン（マウスホバー時のみ表示） -->
        <Button x:Name="MinimizeButton"
                Width="30" Height="30"
                Content="—"
                FontSize="18"
                FontWeight="Bold"
                Cursor="Hand"
                Background="#666666"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,5,40,0"
                Visibility="Collapsed"
                Panel.ZIndex="1000"
                ToolTip="最小化"
                Padding="0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border Background="{TemplateBinding Background}">
                        </Border>
                        <TextBlock Text="{TemplateBinding Content}"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,-3,0,0"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- 閉じるボタン（マウスホバー時のみ表示） -->
        <Button x:Name="CloseButton"
                Width="30" Height="30"
                Content="×"
                FontSize="20"
                FontWeight="Bold"
                Cursor="Hand"
                Background="Red"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,5,5,0"
                Visibility="Collapsed"
                Panel.ZIndex="1000"
                ToolTip="ウィンドウを閉じる"
                Padding="0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border Background="{TemplateBinding Background}">
                        </Border>
                        <TextBlock Text="{TemplateBinding Content}"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,-3,0,0"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
