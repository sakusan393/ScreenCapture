<Window x:Class="ScreenCapture.HotKeySettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotkey Settings"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="400"
        MinHeight="300">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <CheckBox x:Name="EnableHotKeyCheckBox"
                  Grid.Row="0"
                  Content="Enable Global Hotkey"
                  FontSize="14"
                  VerticalAlignment="Center"/>

        <StackPanel Grid.Row="2" IsEnabled="{Binding ElementName=EnableHotKeyCheckBox, Path=IsChecked}">
            <TextBlock Text="Modifiers" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal">
                <CheckBox x:Name="CtrlCheckBox" Content="Ctrl" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <CheckBox x:Name="ShiftCheckBox" Content="Shift" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <CheckBox x:Name="AltCheckBox" Content="Alt" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <CheckBox x:Name="WinCheckBox" Content="Win" Margin="0,0,10,0" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="4" IsEnabled="{Binding ElementName=EnableHotKeyCheckBox, Path=IsChecked}">
            <TextBlock Text="Key" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="KeyTextBox"
                     Height="30"
                     IsReadOnly="True"
                     VerticalContentAlignment="Center"
                     Padding="5"
                     PreviewKeyDown="KeyTextBox_PreviewKeyDown"/>
            <TextBlock Text="Click the textbox and press a key" 
                       FontSize="11" 
                       Foreground="Gray" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="80"
                    Height="30"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
