<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    
    <!-- 単一EXEファイル発行設定 -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    
    <!-- アプリケーション情報 -->
    <AssemblyName>ScreenCapture</AssemblyName>
    <Version>1.0.0</Version>
    <Authors>sakusan393</Authors>
    <Product>ScreenCapture</Product>
    <Description>画面キャプチャツール - テキスト・画像追加・ペイント機能付き</Description>
    
    <!-- アプリケーションアイコン -->
    <ApplicationIcon>app202620231858.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Extended.Wpf.Toolkit" Version="5.0.0" />
    <PackageReference Include="System.Drawing.Common" Version="10.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="app202620231858.ico" />
  </ItemGroup>

</Project>

